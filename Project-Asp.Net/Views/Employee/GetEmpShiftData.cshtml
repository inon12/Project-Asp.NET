@model Project_Asp.Net.Models.EmployeeShift
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <link href="~/StyleSheet1.css" rel="stylesheet" type="text/css" />
        <!-- JavaScript Bundle with Popper -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        <div class="nav">
            <ul class="nav-list">
                <li>Hello  @Session["FullName"]</li>
                <li class="LogOut">Number of Action: @Session["ActionCounter"] </li>
                <li class="LogOut"><a href="/Login/LogOut"> LogOut </a></li>
            </ul>
        </div>

        <div class="container text-center" style="padding-left: 15%;">
            <div class="row">
                <div style="width: 50%;">
                    <h2>Add Shift</h2>
                    @using (Html.BeginForm("AddShiftEmp", "employee", FormMethod.Post, new { @class = "form - horizontal" }))
                    {
                        <div class="form-group">
                            <label class="control-label">Employee ID</label>
                            @Html.TextBoxFor(x=>x.EmployeeID, new { @class = "form-control", disabled="disabled"} )
                            @Html.HiddenFor(x=>x.EmployeeID, new { @class = "form-control"} )
                        </div>
                        <div class="form-group">
                            <label class="control-label">Shift ID</label>
                            @Html.TextBoxFor(x => x.ShiftID, new { @class = "form-control", placeholder = "Enter Shift ID" })
                        </div>
                        <input type="submit" class="btn btn-primary btn-block" value="Add Shift" />
                    }
                </div>
                </div>
            </div>


    </body>
</html>
